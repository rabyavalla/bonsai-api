# B.O.N.S.A.I. Agent Economy API — Environment Variables
# Copy to .env and fill in values

# ── Pinecone ──────────────────────────────────────────────
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=bonsai-health
PINECONE_ENVIRONMENT=us-east-1  # or your region

# ── OpenAI (embeddings only) ─────────────────────────────
OPENAI_API_KEY=your-openai-api-key

# ── Anthropic (Claude for Tiers 2-4) ─────────────────────
ANTHROPIC_API_KEY=your-anthropic-api-key

# ── x402 Payment (USDC on Base) ──────────────────────────
BONSAI_WALLET_ADDRESS=0xYourBaseWalletAddress
BASE_RPC_URL=https://mainnet.base.org
# For testnet: https://sepolia.base.org
USDC_CONTRACT_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913
# Testnet USDC: 0x036CbD53842c5426634e7929541eC2318f3dCF7e

# ── API Config ────────────────────────────────────────────
API_KEY_HEADER=X-API-Key
RATE_LIMIT_PER_MINUTE=100
LOG_LEVEL=INFO

# ── Optional: Skip payment verification for development ──
SKIP_PAYMENT_VERIFICATION=false
